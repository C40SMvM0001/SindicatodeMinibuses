<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlanillaDeControl">

    <TextView
        android:id="@+id/lblChofer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Chofer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPlacaDeVehiculo"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Placa del vehiculo: " />
        <TextView
            android:id="@+id/lblPlaca"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:text="XXXX-XXXX" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblPlanilla"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Planilla de control " />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="130dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:text="Ingresar" />


</androidx.appcompat.widget.LinearLayoutCompat>