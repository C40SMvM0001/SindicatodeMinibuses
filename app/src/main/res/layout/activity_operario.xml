<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlanillaDeControl">

    <TextView
        android:id="@+id/lblOperario"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Operario" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lblPlacaDeVehiculo"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Placa del vehiculo: " />
    <TextView
        android:id="@+id/lblPlaca"
        android:layout_width="wrap_content"

        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:text="XXXX-XXXX" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblFechass"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Fecha actual: " />
        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:text="XX/XX/XXX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblH"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Hora actual: " />
        <TextView
            android:id="@+id/lblHora"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:text="XX:XX" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher_round" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="130dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:text="Realizar control" />


</androidx.appcompat.widget.LinearLayoutCompat>