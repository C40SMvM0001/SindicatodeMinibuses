<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- scroll view para deslizar si el contenido es extenso -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Sindicato de Minibuses" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/ic_launcher_round" />
            <!--- android:layaut_gravity="center" centrar imagen// wrapc ajusta al tamaño original de la img -->

            <TextView
                android:id="@+id/lblSesion"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Iniciar Sesion" />

            <TextView
                android:id="@+id/lblCuenta"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Cuenta:" />

            <EditText
                android:id="@+id/txtCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:ems="15"
                android:inputType="text"
                android:hint="Cuenta" />

            <TextView
                android:id="@+id/lblContrasenia"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Contraseña:" />

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:ems="15"
                android:inputType="textPassword"
                android:hint="Contraseña" />

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:text="Ingresar" />
            <!--android:layout_marginVertical="20dp"-->
            <!--android:layout_marginHorizontal="130dp"-->



        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>




